{
  "name": "CIA Compliance Manager Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "none"
    }
  },
  // Update system dependencies
  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y libgtk2.0-0 libgtk-3-0 libgbm-dev libnotify-dev libnss3 libxss1 libasound2t64 libxtst6 xauth xvfb dbus dbus-x11",
  // Improve service initialization
  "initializeCommand": "sudo service dbus start",
  "customizations": {
    "vscode": {
      "extensions": [
        // Core Development
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vsliveshare.vsliveshare",

        // Vite Specific
        "antfu.vite",
        "ZixuanChen.vitest-explorer",

        // React/TypeScript
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "dsznajder.es7-react-js-snippets",
        "styled-components.vscode-styled-components",
        "csstools.postcss",

        // Testing Tools
        "hbenl.vscode-test-explorer",
        "ryanluker.vscode-coverage-gutters",

        // Developer Experience
        "streetsidesoftware.code-spell-checker",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "usernamehw.errorlens",
        "wix.vscode-import-cost",
        "eamodio.gitlens",
        "oderwat.indent-rainbow",

        // Security & Accessibility
        "deque-systems.vscode-axe-linter",
        "stackbreak.comment-divider",

        // Git & GitHub
        "github.vscode-github-actions",
        "mhutchie.git-graph"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "true" // Changed from boolean to string
        },
        "typescript.updateImportsOnFileMove.enabled": "always",
        "javascript.updateImportsOnFileMove.enabled": "always",
        "typescript.suggest.completeFunctionCalls": true,

        // Add Vitest settings
        "vitest.enable": true,
        "vitest.commandLine": "npx vitest",

        // Add Tailwind settings
        "tailwindCSS.includeLanguages": {
          "typescript": "javascript",
          "typescriptreact": "javascript"
        },
        "tailwindCSS.emmetCompletions": true,

        // Add Coverage settings
        "coverage-gutters.showLineCoverage": true,
        "coverage-gutters.showRulerCoverage": true,

        // Better import organization
        "typescript.preferences.importModuleSpecifier": "shortest",
        "javascript.preferences.importModuleSpecifier": "shortest",

        // Improved error visualization - Fix: Convert array to string
        "errorLens.enabledDiagnosticLevels": "error, warning, info",
        "errorLens.exclude": "never used"
      }
    }
  },
  // Update post-create commands
  "postCreateCommand": "chmod +x .devcontainer/init-xvfb.sh && sudo mkdir -p /var/run/dbus && sudo dbus-daemon --system --fork && npm install -g npm@latest && npm install && npx cypress verify",
  "remoteUser": "node",
  // Expand environment variables
  "containerEnv": {
    "CYPRESS_VERIFY_TIMEOUT": "100000",
    "DBUS_SESSION_BUS_ADDRESS": "unix:path=/run/dbus/system_bus_socket",
    "NODE_OPTIONS": "--max-old-space-size=8192"
  },
  // Use privileged mode for X11 and Cypress
  "runArgs": ["--privileged"],
  // Fix: Remove unsupported postStopCommand
  "shutdownAction": "none"
}
